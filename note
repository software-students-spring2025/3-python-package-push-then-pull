manual_test_and_build:
    name: Run all unit tests and build the package
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      
      - id: setup-python
        name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'
          cache: 'pipenv'

      - name: Install pipenv
        run: curl https://raw.githubusercontent.com/pypa/pipenv/master/get-pipenv.py | python
        shell: bash

      - name: Regen pipfile.lock
        run: pipenv lock
        shell: bash

  
      
      - name: Turn on 'editable' mode, install dependencies
        run: |
          pipenv install -e .
      - name: Check venv information
        run: |
          pipenv --venv
          cat Pipfile
      - name: Run unit tests
        run: |
          pipenv install -e .
          pipenv install pytest kivy kivy-examples build 
          pipenv run -v python -m pytest
      